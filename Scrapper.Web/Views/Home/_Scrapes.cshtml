@model Scrapper.Domain.Abstractions.PageResult<Scrapper.Domain.Scrapes.ScrapeResponse>

@{
    var paginationVm = new PaginationVm(Model.TotalItems, Model.Page, Model.TotalPages, Model.PageSize);
}

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th><a>Id</a></th>
                <th><a>Frek Number</a></th>
                <th><a>Account Number</a></th>
                <th><a>Statement Cycle</a></th>
                <th><a>Artist</a></th>
                <th><a>From Date</a></th>
                <th><a>To Date</a></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Frekno</td>
                    <td>@item.AccountNumber</td>
                    <td>@item.StmtCycle</td>
                    <td>@item.Artist</td>
                    <td>@item.FromDate.ToString("MM-dd-yyyy")</td>
                    <td>@item.ToDate.ToString("MM-dd-yyyy")</td>
                </tr>
            }

            <tr id="rowLoader" class="d-none">
                <td colspan="5" class="text-center py-5">
                    <span class="spinner-border align-items-center"></span>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@{
    await Html.RenderPartialAsync("_Pagination", paginationVm);
}