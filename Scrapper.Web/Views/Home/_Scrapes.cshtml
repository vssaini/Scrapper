@model Scrapper.Domain.Abstractions.PageResult<Scrapper.Domain.Scrapes.ScrapeResponse>

@{
    var paginationVm = new PaginationVm(Model.TotalItems, Model.Page, Model.TotalPages, Model.PageSize);
}

<style>

    table {
        cursor: pointer;
    }

        table th {
            cursor: default;
        }

</style>

@if (Model.Items.Count <= 0)
{
    await Html.RenderPartialAsync("_NoRecords");
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th><a>Id</a></th>
                    <th><a>Batch</a></th>
                    <th><a>Batch Date</a></th>
                    <th><a>Product Id</a></th>
                    <th><a>Product Name</a></th>
                    <th><a>Product Price</a></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr onclick="home.showProductLogs('@item.ProductId')">
                        <td>@item.Id</td>
                        <td>@item.Batch</td>
                        <td>@item.BatchDate.ToString(WebConstants.DateFormatForViews)</td>
                        <td>@item.ProductId</td>
                        <td><span title="@item.ProductName">@item.ProductName</span></td>
                        <td>@item.ProductPrice</td>
                    </tr>
                }

                <tr id="rowLoader" class="d-none">
                    <td colspan="5" class="text-center py-5">
                        <span class="spinner-border align-items-center"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    await Html.RenderPartialAsync("_Pagination", paginationVm);
}